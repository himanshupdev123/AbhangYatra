<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/abhangyatrabg"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/abhangyatra_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="@string/abhangyatra"
        android:textColor="@color/title"
        android:textSize="46sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.684"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/goad_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1.Goad Tuze Roop             "
        app:layout_constraintBottom_toTopOf="@+id/kanada_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.535"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/kanada_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2.Kanada Raja Pandharicha"
        app:layout_constraintBottom_toTopOf="@+id/teerth_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/teerth_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" 3.Teerth Vittala Kshetra Vitaala"
        app:layout_constraintBottom_toTopOf="@+id/aatame_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/aatame_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4.Aata Me Ananya Yethe Adhikari"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>